<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task.id) %>
      <%= link_to 'delete ?', task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"} %>
    </li>
  <% end %>
</ul>

<%= link_to "Creat a new task", new_task_path %>
